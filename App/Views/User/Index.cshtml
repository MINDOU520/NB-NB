@model Models.Users
@{
    ViewBag.Title = "NBNB-个人中心";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container">
    <div class="user-center">
        <div class="row">
            <div class="user-all col-lg-3 col-md-3 col-sm-4 col-xs-6">
                <div class="user-photo">
                    <img src="@Html.DisplayFor(model => model.UserAvatar)" />
                </div>
                <ul class="user-all-ul">
                    <li class="myinfo user-active"><a href="/User/Index">我的信息</a></li>
                    <li class="mygame"><a href="/User/MyMatch">我的约战</a></li>
                    <li class="myposts"><a href="/User/MyPosts">我的帖子</a></li>
                    <li class="mycomment"><a href="/User/MyComment">我的评论</a></li>
                    <li class="myorder"><a href="/ShoppingCart/Index">我的订单</a></li>
                    <li class="changeinfo"><a href="/User/Changeinfo">修改信息</a></li>
                    <li class="logout"><a href="@Url.Action("LogOff", "Login")">注销登录</a></li>                    
                </ul>
            </div>
            <div class="user-body col-lg-9 col-md-9 col-sm-8 col-xs-6">
                <h4><span>用户信息</span></h4>
                <ul>
                    <li><span>用户名：</span>@Model.UserName</li>

                    <li><span>性别：</span>@Html.DisplayFor(model => model.UserSex)</li>

                    <li><span>电话：</span>@Html.DisplayFor(model => model.UserTpl)</li>

                    <li><span>年龄：</span>@Html.DisplayFor(model => model.UserAge)</li>

                    <li><span>email：</span>@Html.DisplayFor(model => model.UserEmail)</li>

                    <li><span>身高：</span>@Html.DisplayFor(model => model.UserHeight)</li>

                    <li><span>体重：</span>@Html.DisplayFor(model => model.UserWeight)</li>
                </ul>
            </div>
        </div>
    </div>
</div>