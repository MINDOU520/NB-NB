@model List<App.Models.NewsCommentViewModel>
@{
    ViewBag.Title = "MyComment";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container">
    <div class="user-center">
        <div class="row">
            <div class="user-all col-lg-3 col-md-3 col-sm-4 col-xs-6">
                <div class="user-photo">
                    <img src="@Session["UserAvatar"]" />
                </div>
                <ul class="user-all-ul">
                    <li class="myinfo"><a href="/User/Index">我的信息</a></li>
                    <li class="mygame"><a href="/User/MyMatch">我的约战</a></li>
                    <li class="myposts"><a href="/User/MyPosts">我的帖子</a></li>
                    <li class="mycomment user-active"><a href="/User/MyComment">我的评论</a></li>
                    <li class="myorder"><a href="/ShoppingCart/Index">我的订单</a></li>
                    <li class="changeinfo"><a href="/User/Changeinfo">修改信息</a></li>
                    <li class="logout"><a href="@Url.Action("LogOff", "Login")">注销登录</a></li>
                </ul>
            </div>
            <div class="user-body col-lg-9 col-md-9 col-sm-8 col-xs-6">
                <h4><span>我的评论</span></h4>
                <table class="table table-hover">
                    <tr>
                        <th>
                            评论文章
                        </th>
                        <th>
                            评论内容
                        </th>
                        <th>
                            评论时间
                        </th>
                        <th></th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.ActionLink(item.NTitle.ToString(), "Details", "News", new { id = item.NComment.NID }, new { })
                            </td>
                            <td>
                                @Html.Raw(item.NComment.NCContent)
                            </td>
                            <td>
                                @item.NComment.NCTime
                            </td>  
                            <td>
                                @Html.ActionLink("删除", "DelectComment", "User", new { id = item.NComment.NCID }, null)
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>   
</div>