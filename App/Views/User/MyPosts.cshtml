@using Models
@model App.Models.UserViewModel

@{
    ViewBag.Title = "NBNB-我的帖子";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container">
    <div class="user-center">
        <div class="row">
            <div class="user-all col-lg-3 col-md-3 col-sm-4 col-xs-6">
                <div class="user-photo">
                    <img src="@Session["UserAvatar"]" />
                </div>
                <ul class="user-all-ul">
                    <li class="myinfo"><a href="/User/Index">我的信息</a></li>
                    <li class="mygame"><a href="/User/MyMatch">我的约战</a></li>
                    <li class="myposts user-active"><a href="/User/MyPosts">我的帖子</a></li>
                    <li class="mycomment"><a href="/User/MyComment">我的评论</a></li>
                    <li class="myorder"><a href="/ShoppingCart/Index">我的订单</a></li>
                    <li class="changeinfo"><a href="/User/Changeinfo">修改信息</a></li>
                    <li class="logout"><a href="@Url.Action("LogOff", "Login")">注销登录</a></li>
                </ul>
            </div>
            <div class="user-body col-lg-9 col-md-9 col-sm-8 col-xs-6">
                <h4><span>我的帖子</span></h4>
                <table class="table table-hover">
                    <tr>
                        <th>帖子名</th>
                        <th>发帖时间</th>
                        <th></th>
                    </tr>

                    @foreach (Posts n in Model.posts)
                    {
                        <tr>
                            <td>
                                <a href="@Url.Action("Details","Posts", new { id =n.PID})">@n.PTitle</a>
                            </td>
                            <td>
                                @String.Format("{0:yyyy-MM-dd HH:mm}", n.PTime)
                            </td>
                            <td>
                                @Html.ActionLink("删除", "Delect", "User", new { id = n.PID }, null)
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
    
</div>