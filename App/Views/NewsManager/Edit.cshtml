@model Models.News

@{
    ViewBag.Title = "NBNB-管理员-修改战报";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container">
    <h2>修改战报</h2>
    <h4 class="warn text-center">数据无价，确认要修改吗？</h4>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.NID)
        <table class="table table-hover">
            <tr>
                <td>
                    战报标题
                </td>
                <td>
                    @Html.EditorFor(model => model.NTitle, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NTitle, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>
                    战报封面图
                </td>
                <td>
                    <span class="glyphicon glyphicon-cloud-upload">
                        <input type="file" name="NImage" class="file-btn" />
                    </span>
                    @Html.ValidationMessageFor(model => model.NImage, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>
                    战报内容
                </td>
                <td>
                    @Html.TextAreaFor(model => model.NContent, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NContent, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td></td>
                <td class="text-center">
                    <input type="submit" value="保存" class="btn btn-lg btn-success" />
                    @Html.ActionLink("返回战报管理页面", "Index")
                </td>
            </tr>
        </table>
    }
    <script src="~/Scripts/ckeditor/ckeditor.js"></script>
    <script src="~/Scripts/ckeditor/config.js"></script>
    <script type="text/javascript">
        CKEDITOR.replace('NContent');
    </script>
</div>