@model Models.Goods

@{
    ViewBag.Title = "NBNB-管理员-商品信息";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container">
    <h2 class="text-center">商品详情</h2>
    <table class="table table-hover">
        <tr>
            <td>
                商品名称
            </td>
            <td>
                @Html.DisplayFor(model => model.GName)
            </td>
        </tr>
        <tr>
            <td>
                商品价格
            </td>
            <td>
                @Html.DisplayFor(model => model.GPrice)
            </td>
        </tr>
        <tr>
            <td>
                商品图片
            </td>
            <td>
                @Html.DisplayFor(model => model.GPhoto)
            </td>
        </tr>
        <tr>
            <td>
                商品颜色
            </td>
            <td>
                @Html.DisplayFor(model => model.GColor)
            </td>
        </tr>
        <tr>
            <td>
                商品尺寸
            </td>
            <td>
                @Html.DisplayFor(model => model.GSize)
            </td>
        </tr>
        <tr>
            <td>
                商品库存
            </td>
            <td>
                @Html.DisplayFor(model => model.GSaled)
            </td>
        </tr>
        <tr>
            <td>
                商品标识
            </td>
            <td>
                @Html.DisplayFor(model => model.GBiaoshi)
            </td>
        </tr>
        <tr>
            <td>
                商品详情
            </td>
            <td>
                @Html.DisplayFor(model => model.GDetails)
            </td>
        </tr>
        <tr>
            <td></td>
            <td class="text-center">
                @Html.ActionLink("修改", "Edit", new { id = Model.GID }) |
                @Html.ActionLink("返回商品管理主页", "Index")
            </td>
        </tr>
    </table>
</div>