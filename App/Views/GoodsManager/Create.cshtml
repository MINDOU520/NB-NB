@model Models.Goods

@{
    ViewBag.Title = "NBNB-管理员-发布商品";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container">
    <h2 class="text-center">发布商品</h2>
    @using (Html.BeginForm("Create", "GoodsManager", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <table class="table table-hover">
            <tr>
                <td>
                    商品名称
                </td>
                <td>
                    @Html.EditorFor(model => model.GName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.GName, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>
                    商品价格
                </td>
                <td>
                    @Html.EditorFor(model => model.GPrice, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.GPrice, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>
                    商品图片
                </td>
                <td>
                    <span class="glyphicon glyphicon-cloud-upload">
                        <input type="file" name="GImage" class="file-btn" />
                    </span>
                    <span>点击上传商品图片</span>
                </td>
            </tr>
            <tr>
                <td>
                    商品颜色
                </td>
                <td>
                    @Html.EditorFor(model => model.GColor, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.GColor, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>
                    商品尺寸
                </td>
                <td>
                    @Html.EditorFor(model => model.GSize, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.GSize, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>
                    商品库存
                </td>
                <td>
                    @Html.EditorFor(model => model.GSaled, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.GSaled, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>
                    商品标识
                </td>
                <td>
                    @Html.EditorFor(model => model.GBiaoshi, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.GBiaoshi, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>
                    商品详情
                </td>
                <td>
                    @Html.TextAreaFor(model => model.GDetails)
                    @Html.ValidationMessageFor(model => model.GDetails, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td></td>
                <td class="text-center">
                    <input type="submit" value="发布" class="btn btn-default" />
                    @Html.ActionLink("返回商品管理页面", "Index")
                </td>
            </tr>
        </table>
    }
    <script src="~/Scripts/ckeditor/ckeditor.js"></script>
    <script src="~/Scripts/ckeditor/config.js"></script>
    <script type="text/javascript" src="/ckfinder/ckfinder.js"></script>
    <script type="text/javascript">
        CKEDITOR.replace('GDetails');
    </script>
</div>