@model Models.Goods

@{
    ViewBag.Title = "NBNB-管理员-删除商品";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container">
    <h2>删除商品</h2>
    <h4 class="warn text-center">数据无价，确认要删除吗？</h4>
    <table class="table table-hover">
        <tr>
            <td>
                商品名称
            </td>
            <td>
                @Html.DisplayFor(model => model.GName)
            </td>
        </tr>
        <tr>
            <td>
                商品价格
            </td>
            <td>
                @Html.DisplayFor(model => model.GPrice)
            </td>
        </tr>
        <tr>
            <td>
                商品图片
            </td>
            <td>
                @Html.DisplayFor(model => model.GPhoto)
            </td>
        </tr>
        <tr>
            <td>
                商品颜色
            </td>
            <td>
                @Html.DisplayFor(model => model.GColor)
            </td>
        </tr>
        <tr>
            <td>
                商品尺寸
            </td>
            <td>
                @Html.DisplayFor(model => model.GSize)
            </td>
        </tr>
        <tr>
            <td>
                商品库存
            </td>
            <td>
                @Html.DisplayFor(model => model.GSaled)
            </td>
        </tr>
        <tr>
            <td>
                商品标识
            </td>
            <td>
                @Html.DisplayFor(model => model.GBiaoshi)
            </td>
        </tr>
        <tr>
            <td>
                商品详情
            </td>
            <td>
                @Html.DisplayFor(model => model.GDetails)
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="删除" class="btn btn-danger" /> |
                        @Html.ActionLink("返回商品管理页面", "Index")
                    </div>
                }
            </td>
        </tr>
    </table>
</div>