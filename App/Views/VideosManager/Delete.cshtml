@model Models.Video

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container">
    <h2 class="text-center">删除视频</h2>
    <h4 class="warn text-center">数据无价，确认要删除吗？</h4>
    <table class="table table-hover">
        <tr>
            <td>
                视频名称
            </td>
            <td>
                @Html.DisplayFor(model => model.VName)
            </td>
        </tr>
        <tr>
            <td>
                上传时间
            </td>
            <td>
                @Html.DisplayFor(model => model.VTime)
            </td>
        </tr>
        <tr>
            <td>
                视频封面图
            </td>
            <td>
                <img src="@Html.DisplayFor(model => model.VSrcimg)" width="300" />
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="center-block">
                        <input type="submit" value="删除视频" class="btn btn-danger" /> |
                        @Html.ActionLink("返回视频管理页面", "Index")
                    </div>
                }
            </td>
        </tr>
    </table>
</div>
