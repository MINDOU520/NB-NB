@model Models.Video

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container">
    <h2 class="text-center">视频详情</h2>
    <table class="table table-hover">
        <tr>
            <td>
                视频名称
            </td>
            <td>
                @Html.DisplayFor(model => model.VName)
            </td>
        </tr>
        <tr>
            <td>
                上传时间
            </td>
            <td>
                @Html.DisplayFor(model => model.VTime)
            </td>
        </tr>
        <tr>
            <td>
                视频封面图
            </td>
            <td>
                <img src="@Html.DisplayFor(model => model.VSrcimg)" width="300" />
            </td>
        </tr>
        <tr>
            <td></td>
            <td class="text-center">
                @Html.ActionLink("修改", "Edit", new { id = Model.VID }) |
                @Html.ActionLink("返回视频管理页面", "Index")
            </td>
        </tr>
    </table>
</div>