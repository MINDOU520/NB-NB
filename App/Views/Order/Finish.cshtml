@model Models.Orders
@{
    ViewBag.Title = "NBNB-订单";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
      
            @Html.EditorFor(model => model.Address)
            @Html.ValidationMessageFor(model => model.Address)
     
            @Html.EditorFor(model => model.Tpl)
            @Html.ValidationMessageFor(model => model.Tpl)
       
            @Html.EditorFor(model => model.Consignee)
            @Html.ValidationMessageFor(model => model.Consignee)
    
        <input type="submit" value="完成订单" />
    }
</div>
