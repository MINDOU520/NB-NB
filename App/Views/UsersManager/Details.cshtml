@model Models.Users

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container">
    <h2 class="text-center">删除用户</h2>
    <table class="table table-hover">
        <tr>
            <td>
                用户名
            </td>
            <td>
                @Html.DisplayFor(model => model.UserName)
            </td>
        </tr>
        <tr>
            <td>
                手机号
            </td>
            <td>
                @Html.DisplayFor(model => model.UserTpl)
            </td>
        </tr>
        <tr>
            <td>
                性别
            </td>
            <td>
                @Html.DisplayFor(model => model.UserSex)
            </td>
        </tr>
        <tr>
            <td>
                头像
            </td>
            <td>
                @Html.DisplayFor(model => model.UserAvatar)
            </td>
        </tr>
        <tr>
            <td>
                邮箱
            </td>
            <td>
                @Html.DisplayFor(model => model.UserEmail)
            </td>
        </tr>
        <tr>
            <td>
                年龄
            </td>
            <td>
                @Html.DisplayFor(model => model.UserAge)
            </td>
        </tr>
        <tr>
            <td>
                身高
            </td>
            <td>
                @Html.DisplayFor(model => model.UserHeight)
            </td>
        </tr>
        <tr>
            <td>
                体重
            </td>
            <td></td>
        </tr>
        <tr>
            <td></td>
            <td class="text-center">
                @Html.ActionLink("修改", "Edit", new { id = Model.UserID }) |
                @Html.ActionLink("返回用户管理页面", "Index")
            </td>
        </tr>
    </table>
</div>
