<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="~/Images/logoo.png" type="image/x-icon" />
    <title>@ViewBag.Title</title>

    <link href="@Url.Content("~/Content/bootstrap.css")" type="text/css" rel="stylesheet">
    <link href="@Url.Content("~/Content/style.css")" type="text/css" rel="stylesheet">
    <link href="@Url.Content("~/Content/module.css")" type="text/css" rel="stylesheet">
    <link href="@Url.Content("~/Content/view.css")" type="text/css" rel="stylesheet">
    <link href="@Url.Content("~/Content/manager.css")" type="text/css" rel="stylesheet">
</head>
<body>
    <!-- 顶部天气栏以及定位和二维码,通过js动态调用本机IP地址区域的天气 -->
    <div class="head-top">
        <div class="container">           
            <div class="sm">
                <span class="glyphicon glyphicon-qrcode"></span>
                <div class="ewmbox">
                    <p>微信扫一扫<br />关注我们</p>
                    <img src="~/Images/erweima.png" />
                </div>
            </div>
            <div class="posi" title="附近">
                <span class="glyphicon glyphicon-map-marker"></span>
            </div>
        </div>
    </div>
    <!-- 头部logo和导航栏 -->
    <div class="header">
        <div class="container">
            <nav class="navbar navbar-default" role="navigation">
                <div class="navbar-header clearfix">
                    <button type="button" class="navbar-toggle clearfix" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="/Home/Index"><img src="~/Images/logo.png" /></a>
                </div>
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li class="grid">
                            <a href="/Match/Index" class="list1">约战</a>                          
                        </li>
                        <li class="grid">
                            <a href="/News/Index" class="list1">战报</a>                            
                        </li>
                        <li class="grid">
                            <a href="/Posts/Index" class="list1">论坛</a>                           
                        </li>
                        <li class="grid">
                            <a href="/goods/Index" class="list1">商城</a>                            
                        </li>
                    </ul>
                </div>
            </nav>
            <div class="header-info">
                <div class="header-right search-box">
                    <a href="/User/MyPosts"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span></a>                   
                </div>
                <div class="header-right login">
                    @if (Session["UserID"] != null)
                    {
                        <a href="/User/Index">
                            <span class="glyphicon user-ava"><img class="img-circle" src="@Session["UserAvatar"]" /></span>
                        </a>
                    }
                    else
                    {
                        <a href="/Login/Index"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></a>
                    }                    
                    <div id="loginBox">
                        @if (Session["UserID"] != null)
                        {
                            <div id="userbox">
                                <div class="user-info">
                                    <div class="user-avatar">
                                        @if (Session["UserAvatar"] != null)
                                        {
                                            <img class="img-circle" src="@Session["UserAvatar"]" />
                                        }
                                        else
                                        {
                                            <img src="~/Images/avt.jpg" />
                                        }
                                    </div>
                                    <div class="user-name">
                                        <span>@Session["UserName"]</span>
                                    </div>
                                </div>
                                <hr />
                                <a href="/User/Index"><span class="glyphicon glyphicon-user"> 个人中心</span></a>
                                <a href="/User/MyMatch"><span class="glyphicon glyphicon-glass"> 我的约战</span></a>
                                <a href="/User/MyPosts"><span class="glyphicon glyphicon-bell"> 我的消息</span></a>
                                <a href="@Url.Action("LogOff", "Login")"><span class="glyphicon glyphicon-log-out"> 注销登录</span></a>
                                <div class="user-other">
                                    <ul>
                                        <li><div class="weibo" title="微博"></div></li>
                                        <li><div class="weixin" title="微信"></div></li>
                                        <li><div class="qq" title="QQ"></div></li>
                                        <li><div class="facebook" title="facebook"></div></li>
                                        <li><div class="twitter" title="twitter"></div></li>
                                    </ul>
                                </div>
                                <div class="user-setting">
                                    <a href="/User/Changeinfo"><span class="glyphicon glyphicon-cog" title="修改个人信息"></span></a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div class="header-right cart">
                    <a href="/ShoppingCart/Index"><span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span></a>
                </div>
            </div>
        </div>
    </div>
    <!-- 主体部分 -->
    <div class="main">
        <div class="space"></div>
        @RenderBody()
    </div>
    <!-- 脚注部分 -->
    <div class="footer">
        <div class="container">
            <div class="row">
                <div class="col-xs-6 col-sm-3 col-lg-3">
                    <div class="widget">
                        <h4>关于我们</h4>
                        <p><a href="/Manager/ManagerLogin">商软四巨头<br />强无敌！！！</a></p>
                    </div>
                </div>
                <div class="col-xs-6 col-sm-3 col-lg-3">
                    <div class="widget">
                        <h4>团队成员</h4>
                        <ul class="link-list">
                            <li>朱敏</li>
                            <li>刘万明</li>
                            <li>谭梓毅</li>
                            <li>李江辉</li>
                        </ul>
                    </div>
                </div>
                <div class="col-xs-6 col-sm-3 col-lg-3">
                    <div class="widget">
                        <h4>友情链接</h4>
                        <ul class="link-list">
                            <li><a href="https://www.zhibo8.cc/" target="_blank">直播吧</a></li>
                            <li><a href="https://nba.hupu.com/" target="_blank">虎扑体育</a></li>
                            <li><a href="http://sports.qq.com/nba/" target="_blank">腾讯NBA</a></li>
                            <li><a href="http://sports.sina.com.cn/" target="_blank">新浪NBA</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-xs-6 col-sm-3 col-lg-3">
                    <div class="widget">
                        <h4>意见和反馈</h4>
                        <p>写下你想对我们说的：</p>
                        <div class="form-group multiple-form-group input-group">
                            <input type="text" placeholder="写下你的想法" class="form-control">
                            <span class="input-group-btn">
                                <input class="btn btn-theme btn-add" type="button" value="发送">
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- 版权信息 -->
    <div class="copyright">
        <div class="container">
            <div class="sub-footer">
                <div class="row">
                    <p>&copy; Copyright  @DateTime.Now.Year  15级商软班3515a工作室<br />NBNB项目小组版权所有</p>
                </div>
            </div>
        </div>
    </div>
    <div class="end">
        <div class="end-wording">别下拉了，我是有底线的！</div>
        <div class="end-border end-border-1px border-bottom"></div>
    </div>
    <div class="somefixed">
        <!-- 返回顶部 -->
        <div class="backtop" title="返回顶部">
            <i class="glyphicon glyphicon-arrow-up"></i>
        </div>
        <!-- 调用百度地图API -->
        <div class="map-box">
            <div class="map-head">
                <h3>找附近球场，快速战斗！</h3>
                <div class="map-close" title="关闭">
                    <span class="glyphicon glyphicon-remove"></span>
                </div>
            </div>
            <div class="map">
                <div id="allmap"></div>
            </div>
        </div>
        <!-- 遮罩层 -->
        <div class="zzc"></div>
    </div>

    <script src="@Url.Content("~/Scripts/jquery.min.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-3.1.1.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.fly.min.js")"></script>
    <script src="@Url.Content("http://api.map.baidu.com/api?v=2.0&ak=RPLo6rGFK671usuzSrxQ1H5dzwlbE8HG")"></script>
    <script src="@Url.Content("~/Scripts/main.js")"></script>
    <script src="@Url.Content("~/Scripts/module.js")"></script>
    <script src="@Url.Content("~/Scripts/view.js")"></script>
</body>
</html>
