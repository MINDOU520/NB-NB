@model Models.Posts

@{
    ViewBag.Title = "NBNB-管理员-发布帖子";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container">
    <h2 class="text-center">发布帖子</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <table class="table table-hover">
            <tr>
                <td>
                    帖子标题
                </td>
                <td>
                    @Html.EditorFor(model => model.PTitle, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PTitle, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>
                    帖子内容
                </td>
                <td>
                    @Html.TextAreaFor(model => model.PContent)
                    @Html.ValidationMessageFor(model => model.PContent, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td></td>
                <td class="text-center">
                    <input type="submit" value="发表帖子" class="btn btn-success" />
                    @Html.ActionLink("返回帖子管理页面", "Index")
                </td>
            </tr>
        </table>        
    }
    <script src="~/Scripts/ckeditor/ckeditor.js"></script>
    <script src="~/Scripts/ckeditor/config.js"></script>
    <script type="text/javascript" src="/ckfinder/ckfinder.js"></script>
    <script type="text/javascript">
        CKEDITOR.replace('PContent');
    </script>
</div>