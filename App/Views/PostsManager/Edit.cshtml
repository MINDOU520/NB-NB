@model Models.Posts

@{
    ViewBag.Title = "NBNB-管理员-修改帖子";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container">
    <h2 class="text-center">修改帖子</h2>
    <h4 class="warn text-center">数据无价，确认要修改吗？</h4>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.PID)
        <table class="table table-hover">
            <tr>
                <td>
                    帖子标题
                </td>
                <td>
                    @Html.EditorFor(model => model.PTitle, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PTitle, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>
                    上传时间
                </td>
                <td>
                    @Html.EditorFor(model => model.PTime, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PTime, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>
                    帖子内容
                </td>
                <td>
                    @Html.TextAreaFor(model => model.PContent, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PContent, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input type="submit" value="保存" class="btn btn-success" />
                    @Html.ActionLink("返回帖子管理页面", "Index")
                </td>
            </tr>
        </table>
    }
    <script src="~/Scripts/ckeditor/ckeditor.js"></script>
    <script src="~/Scripts/ckeditor/config.js"></script>
    <script type="text/javascript" src="/ckfinder/ckfinder.js"></script>
    <script type="text/javascript">
        CKEDITOR.replace('PContent');
    </script>
</div>